<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
     android:background="#FFFFFF" >

    <TextView
        android:id="@+id/txtHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#8C1515"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#8C1515"
        android:padding="10dp"
        android:text="Encore"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/txtHeader" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="394dp"
            android:orientation="vertical" >

            <adapter.TextViewEx
                android:id="@+id/mission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingLeft="13dp"
        android:paddingRight="13dp"
                android:layout_marginTop="25dp"
                android:text="adapter.TextViewEx" />

            <adapter.TextViewEx
                android:id="@+id/adapter.TextViewEx2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/department_news"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/thought"
               
                android:textStyle="bold" 
                 android:paddingLeft="13dp"
        android:paddingRight="13dp"
                android:text="The events at Encore are as follows : "
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#336699"
                android:textSize="18dp" />

            <adapter.TextViewEx
                android:id="@+id/department_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/mission"
                android:layout_below="@+id/adapter.TextViewEx2"
                 android:paddingLeft="13dp"
        android:paddingRight="13dp"
                android:layout_marginTop="18dp"
                android:text="adapter.TextViewEx" />

            <adapter.TextViewEx
                android:id="@+id/thought"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mission"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:textStyle="bold" 
                android:paddingLeft="10dp"
                android:text=" 'It is not remarkable what we know; but how we present.'
" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>