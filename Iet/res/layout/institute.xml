<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true" 
    android:background="#FFFFFF"
    >

    <ImageButton
        android:id="@+id/go_institute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/go_holidays"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="28dp"
        android:background="#000000"
        android:focusable="false"
        android:src="@drawable/ic_institute" />

    <ImageButton
        android:id="@+id/go_aboutus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="#000000"
        android:src="@drawable/ic_aboutus" />

    <ImageButton
        android:id="@+id/go_administration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/go_institute"
        android:layout_alignTop="@+id/go_vision"
        android:background="#000000"
        android:src="@drawable/ic_administration" />

    <ImageButton
        android:id="@+id/go_vision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="35dp"
        android:layout_marginTop="70dp"
        android:background="#000000"
        android:src="@drawable/ic_vision" />

    <ImageButton
        android:id="@+id/go_holidays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/go_vision"
        android:layout_centerVertical="true"
        android:background="#000000"
        android:src="@drawable/ic_holidays" />

</RelativeLayout>