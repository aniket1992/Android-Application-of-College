<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/txtHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#8C1515"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#8C1515"
        android:padding="10dp"
        android:text="About Us"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />
    
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/txtHeader" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >
 <adapter.TextViewEx
        android:id="@+id/institute_aboutus"
        
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
       
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:layout_marginTop="47dp"
      
       android:layout_gravity="fill_horizontal"
android:layout_alignParentTop="true"
android:layout_width="match_parent"
  
        android:text="TextView" />

   <adapter.TextViewEx
        android:id="@+id/institute_aboutus1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_below="@+id/imageView1"
        android:layout_alignLeft="@+id/institute_aboutus"
        
       
         android:paddingLeft="13dp"
        
        android:text="TextView" />

    <adapter.TextViewEx
        android:id="@+id/institute_aboutus2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/institute_aboutus1"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/institute_aboutus1"
        android:layout_marginTop="14dp"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:text="TextView" />

   
    

   <adapter.TextViewEx
        android:id="@+id/institute_aboutus3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/institute_aboutus2"
        android:layout_alignParentRight="true"
        
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:layout_below="@+id/institute_aboutus2"
        android:layout_marginTop="14dp"
        android:text="TextView" />

   <adapter.TextViewEx
        android:id="@+id/institute_aboutus4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/institute_aboutus3"
         android:layout_below="@+id/institute_aboutus3"
        android:layout_alignParentRight="true"
        android:layout_marginTop="14dp"
         android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:text="TextView" />

   <ImageView
       android:id="@+id/imageView1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/institute_aboutus"
       android:layout_centerHorizontal="true"
       android:paddingRight="13dp"
       android:src="@drawable/college_image" />
            
        </RelativeLayout>

    </ScrollView>

   </RelativeLayout>